{
  "endOfLine": "crlf",
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "tabWidth": 2,
  "printWidth": 80,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "(module-alias|dotenv)",
    "^@/domain",
    "^@/presentation",
    "^@/services",
    "^@/infra",
    "^@/main",
    "^@/tests",
    "^@(.*)",
    "^node",
    "<THIRD_PARTY_MODULES>",
    "^[./]"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
